<p id="notice"><%= notice %></p>

<ul class="media-grid">
  <li>
    <a>
      <img src="<%= @researcher.avatar.url(:small)%>"/>
    </a>
  </li>
</ul>

<p>
  <b>Nome:</b>
  <%= @researcher.nome %>
</p>

<p>
  <b>Email:</b>
  <%= @researcher.email %>
</p>

<p>
  <b>Cargo:</b>
  <%= @researcher.cargo %>
</p>

<p>
  <b>Lattes:</b>
  <a href="<%= @researcher.lattes %>"><%= @researcher.lattes %></a>
</p>
<%if user_signed_in?%>
<div class = "btn">
<%= link_to 'Editar', edit_researcher_path(@researcher)%>
</div>
<%end%>
<div class = "btn">
<%= link_to 'Voltar', researchers_path %>
</div>

