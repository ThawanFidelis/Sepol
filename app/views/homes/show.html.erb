<h1>
  <span id="page_name" class="mercury-region" data-type="editable">
    <%= raw @home.titulo %>
  </span>
</h1>

<div id="page_content" class="mercury-region" data-type="editable">
  <%= raw @home.texto %>
</div>

<div class="btn">
  <%= link_to 'Voltar', homes_path %>
</div>
<% if user_signed_in? %>
<div class="btn">
  <%= link_to "Editar", "/editor" + request.path, id: "edit_link",
      data: {save_url: mercury_update_home_path(@home)} %>
</div>
<% end %>

